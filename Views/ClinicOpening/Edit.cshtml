@model PresMed.Models.ClinicOpening

@{
    ViewData["Title"] = $"Editar horario de funcionamento da clinica";
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["ErrorMessage"]
    </div>
}


<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />


<form class="row g-3" asp-action="Edit">

    <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
    <div class="col-md-6">
        <label asp-for="@Model.InitialHour" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.InitialHour" type="time" class="form-control" id="nome" placeholder="Digite o horario inicial de trabalho do medico">
        <span asp-validation-for="@Model.InitialHour" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.EndHour" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.EndHour" type="time" class="form-control" placeholder="Digite o horario inicial de trabalho do medico">
        <span asp-validation-for="@Model.EndHour" class="text-danger"></span>
    </div>

    <div class="col-12 mb-5">
        <button type="submit" class="btn btn-success">Alterar</button>
        <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="ClinicOpening">Voltar</a>
    </div>

</form>
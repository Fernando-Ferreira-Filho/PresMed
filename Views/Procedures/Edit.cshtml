@model PresMed.Models.Procedures

@{
    ViewData["Title"] = $"Editar procedimento";
}


<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />


<form class="row g-3" asp-action="Edit">

    <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
    <div class="col-md-7">
        <label asp-for="@Model.Name" class="form-label"></label><span class="text-danger">*</span>
        <textarea asp-for="@Model.Name" type="text" class="form-control" id="nome" placeholder="Digite o nome completo do procedimento"></textarea>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>


    <div class="col-md-7">
        <label asp-for="@Model.Tuss" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Tuss" type="text" class="form-control" readonly placeholder="Digite o TUSS completo">
        <span asp-validation-for="@Model.Tuss" class="text-danger"></span>
    </div>

    @if (Model.Status == PresMed.Models.Enums.Status.Ativo) {

        <div class="col-12 mb-5">
            <button type="submit" class="btn btn-success">Alterar</button>
            <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Procedures">Voltar</a>
        </div>
    }
    @if (Model.Status == PresMed.Models.Enums.Status.Desativado) {

        <div class="col-12 mb-5">
            <button type="submit" class="btn btn-success">Alterar</button>
            <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Procedures">Voltar</a>
        </div>
    }

</form>
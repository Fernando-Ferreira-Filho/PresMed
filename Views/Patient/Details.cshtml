@model PresMed.Models.Person

@{
    ViewData["Title"] = $"Detalhes do(a) paciente {@Model.Name}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Dados Pessoais</h6>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Name)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Name)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Email)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Email)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Cpf)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Cpf)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Phone)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Phone)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.BirthDate)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.BirthDate)
            </div>
        </div>


    </div>
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Endereço</h6>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.State)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.State)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.City)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.City)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.District)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.District)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Street)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Street)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Number)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Number)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Complement)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Complement)
            </div>

        </div>
    </div>
    @if (Model.Status == PresMed.Models.Enums.Status.Ativo) {
        <div class="col-12 mt-5 mb-5">
            <a role="button" asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Patient" class="btn btn-primary">Editar</a>
            <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Patient">Voltar</a>
        </div>
    }
    @if (Model.Status == PresMed.Models.Enums.Status.Desativado) {
        <div class="col-12 mt-5 mb-5">
            <a role="button" asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Patient" class="btn btn-primary">Editar</a>
            <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Patient">Voltar</a>
        </div>
    }
</div>

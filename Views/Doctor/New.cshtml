@model PresMed.Models.Doctor

@{
    ViewData["Title"] = "Cadastrar medicos";
}


<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />


<form class="row g-3" asp-action="New">
    <div class="col-md-6">
        <label for="nome" class="form-label">Nome completo<span class="text-danger">*</span> </label>
        <input asp-for="@Model.Name" type="text" class="form-control" id="nome" placeholder="Digite o nome completo">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="email" class="form-label">E-mail <span class="text-danger">*</span></label>
        <input asp-for="@Model.Email" type="email" class="form-control" id="email" placeholder="Digite o e-mail">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="user" class="form-label">Usuario <span class="text-danger">*</span></label>
        <input asp-for="@Model.User" type="text" class="form-control" id="user" placeholder="Digite o nome de usuario">
        <span asp-validation-for="@Model.User" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="phone" class="form-label">Telefone <span class="text-danger">*</span></label>
        <input asp-for="@Model.Phone" type="text" class="form-control" id="phone" placeholder="Digite o numero de telefone">
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="crm" class="form-label">CRM <span class="text-danger">*</span></label>
        <input asp-for="@Model.Crm" type="text" class="form-control" id="phone" placeholder="Digite o numero do CRM do médico">
        <span asp-validation-for="@Model.Crm" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="speciality" class="form-label">Especialidade <span class="text-danger">*</span></label>
        <input asp-for="@Model.Speciality" type="text" class="form-control" id="phone" placeholder="Digite a especialidade do médico">
        <span asp-validation-for="@Model.Speciality" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="cpf" class="form-label">CPF <span class="text-danger">*</span></label>
        <input asp-for="@Model.Cpf" type="text" class="form-control" id="phone" placeholder="Digite o CPF do medico">
        <span asp-validation-for="@Model.Cpf" class="text-danger"></span>
    </div>
    <div class="row mt-4">
        <div class="col-md-2">
            <label for="cep" class="form-label">CEP </label>
            <input type="text" class="form-control" id="cep1" placeholder="Digite o numero do CEP">
        </div>
        <div class="col-md-1">
            <label for="cep" class="form-label">Pesquisar </label>
            <a class="btn btn-info pesquisar"><i class="fas fa-search"></i></a>
        </div>
    </div>

    <div class="col-md-6">
        <label class="form-label" for="logradouro">Rua<span class="text-danger">*</span> </label>
        <input asp-for="@Model.Street" class="form-control" type="text" id="logradouro">
        <span asp-validation-for="@Model.Street" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label" for="complemento">Complemento </label>
        <input asp-for="@Model.Complement" class="form-control" type="text" id="complemento" placeholder="Digite o complemento">
    </div>
    <div class="col-md-6">
        <label class="form-label" for="bairro">Bairro <span class="text-danger">*</span></label>
        <input asp-for="@Model.District" class="form-control" type="text" id="bairro">
        <span asp-validation-for="@Model.District" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label" for="localidade">Cidade <span class="text-danger">*</span></label>
        <input asp-for="@Model.City" class="form-control" type="text" id="localidade">
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label" for="uf">Estado<span class="text-danger">*</span> </label>
        <input asp-for="@Model.State" class="form-control" type="text" id="uf">
        <span asp-validation-for="@Model.State" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label" for="numero">Número</label>
        <input asp-for="@Model.Number" class="form-control" type="text" id="complemento" placeholder="Digite o número do endereço">
    </div>

    <div class="col-12 mb-5">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a role="button" class="btn btn-secondary" asp-action="Index" asp-controller="Doctor">Voltar</a>
    </div>

</form>
@model PresMed.Models.Person

@{
    ViewData["Title"] = $"Detalhes do medico {@Model.Name}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="row">
        <div class="col-lg-6">
            <h6 class="display-6 mb-5">Dados Pessoais</h6>

            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Name)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Name)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Email)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Email)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.User)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.User)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Cpf)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Cpf)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Phone)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Phone)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Crm)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Crm)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Speciality)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Speciality)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.BirthDate)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.BirthDate)
                </div>
            </div>


        </div>
        <div class="col-lg-6">
            <h6 class="display-6 mb-5">Endereço</h6>

            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.State)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.State)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.City)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.City)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.District)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.District)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Street)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Street)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Number)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Number)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Crm)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Crm)
                </div>

            </div>
            <div class="row mb-2">
                <div class="col-md-4">
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Complement)</span>
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Complement)
                </div>

            </div>
        </div>

        @if (Model.Status == PresMed.Models.Enums.UserStatus.Ativo) {
            <form asp-action="Disable" asp-controller="Doctor" method="post" class="mb-5 mt-5">
                <input hidden asp-for="Id" />
                <input type="submit" value="Desativar" class="btn btn-danger" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Doctor">Voltar</a>
            </form>
        }

        @if (Model.Status == PresMed.Models.Enums.UserStatus.Inativado) {
            <form asp-action="Enable" asp-controller="Doctor" method="post" class="mb-5 mt-5">
                <input hidden asp-for="Id" />
                <input type="submit" value="Ativar" class="btn btn-success" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Doctor">Voltar</a>
            </form>
        }
    </div>

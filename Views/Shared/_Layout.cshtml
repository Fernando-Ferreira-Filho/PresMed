<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PresMed</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min-lux.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />


</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <img src="~/images/cardapio.png" width="30px" height="30px" id="header-toggle" /> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a asp-controller="Home" asp-action="Index" class="nav_logo"> <img img src="~/images/documento.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_logo-name">PresMed</span> </a>
                <div class="nav_list">
                    <a asp-controller="Home" asp-action="Index" class="nav_link" id="home"> <img img src="~/images/home.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Pagina Inicial</span> </a>
                    <a asp-controller="Patient" asp-action="Index" class="nav_link" id="pacientes"> <img img src="~/images/paciente.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Pacientes</span> </a>
                    <a asp-controller="Doctor" asp-action="Index" class="nav_link" id="medicos"> <img img src="~/images/medico.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Medicos</span> </a>
                    <a asp-controller="Assistant" asp-action="Index" class="nav_link" id="auxiliares"> <img img src="~/images/secretaria.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Auxiliares</span> </a>
                    <a asp-controller="Scheduling" asp-action="Index" class="nav_link" id="agendamentos"> <img img src="~/images/agenda.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Agendamentos</span> </a>
                </div>
            </div>
            <a asp-controller="" asp-action="" class="nav_link"> <img img src="~/images/logout.png" width="20px" height="20px" class='nav_logo-icon' /> <span class="nav_name">Sair</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100" role="main">
        @RenderBody()
    </div>

    <!--Container Main end-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
</body>
</html>
